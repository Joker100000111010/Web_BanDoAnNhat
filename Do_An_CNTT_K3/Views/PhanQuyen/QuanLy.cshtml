@model Do_An_CNTT_K3.Models.HomePage
@{
    ViewData["Title"] = "Dashboard";
}
<style>
    /* Custom CSS for product table */
    .table-container {
        background-color: #2c3e50; /* Dark background for contrast */
        padding: 20px;
        border-radius: 10px;
        color:azure;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);

    }

    .table {
        width: 100%;
        margin-bottom: 1rem;
        color: #ffffff; /* Change text color to white */
    }

        .table th,
        .table td {
            padding: 1rem;
            vertical-align: middle;
            border-top: 1px solid #dee2e6;
        }

        .table thead th {
            vertical-align: bottom;
            border-bottom: 2px solid #dee2e6;
            background-color: #34495e;
            color: #ffffff;
        }

        .table tbody tr {
            background-color: #3d566e; /* Background color for rows */
            color: #ffffff;
        }

            .table tbody tr:hover {
                background-color: #576f8f; /* Hover effect for rows */
            }

        .table .img-thumbnail {
            border: none;
            max-width: 80px; /* Max width for images */
            border-radius: 10px; /* Rounded corners for images */
        }

        .table .btn {
            margin: 0 5px; /* Margin for buttons */
        }

    .btn-sm {
        padding: .25rem .5rem;
        font-size: .875rem;
        line-height: 1.5;
        border-radius: .2rem;
    }

    .btn-success{
        padding:10px;
        background-color: #3498db;
        border-color: #3498db;
        color: #ffffff;
        text-decoration: none;
    }

    .btn-success:hover {
            background-color: #2980b9;
            border-color: #2980b9;
        }
    .btn-primary {
        background-color: #3498db;
        border-color: #3498db;
        color: #ffffff;
        text-decoration: none;
        margin-bottom:5px;
    }

        .btn-primary:hover {
            background-color: #2980b9;
            border-color: #2980b9;
        }

    .btn-danger {
        background-color: #e74c3c;
        border-color: #e74c3c;
        color: #ffffff;
        text-decoration: none;
    }

        .btn-danger:hover {
            background-color: #c0392b;
            border-color: #c0392b;
        }
</style>

<div class="container table-container" style="transform: scale(0.9);">
    <h1 class="mt-5">Sản Phẩm</h1>

    <h2 class="mt-4">Products</h2>
    <a href="@Url.Action("CreateInformation", "PhanQuyen")" class="btn btn-success mb-3">Thêm Sản Phẩm</a>
    <br />
    <br />
    <table class="table table-striped table-bordered table-hover mt-3">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Tên Sản Phẩm</th>
                <th>Mô Tả</th>
                <th>Phần Trăm Giảm Giá</th>
                <th>Giảm Giá</th>
                <th>Giá Tiền</th>
                <th>View</th>
                <th>Hình Ảnh 1</th>
                <th>Hình Ảnh 2</th>
                <th>Loại Sản Phẩm</th>
                <th>Hành Động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.IdSP</td>
                    <td>@product.TenSP</td>
                    <td>@product.MoTa</td>
                    <td>@product.PTgiamgia%</td>
                    <td>@product.GiamGia</td>
                    <td>@product.GiaTien</td>
                    <td>@product.View</td>
                    <td><img src="~/DoAnMonCNTT/images/Anhvathongtindoannhat/@product.Image1" alt="@product.TenSP" class="img-thumbnail" /></td>
                    <td><img src="~/DoAnMonCNTT/images/Anhvathongtindoannhat/@product.Image2" alt="@product.TenSP" class="img-thumbnail" /></td>
                    <td>@product.LoaiSP</td>
                    <td>
                        <a href="@Url.Action("Edit", "PhanQuyen", new { id = product.IdSP })" class="btn btn-primary btn-sm">Sửa</a>
                        <br />
                        <br />
                        <a href="@Url.Action("Delete", "PhanQuyen", new { id = product.IdSP })" class="btn btn-danger btn-sm">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
