@inject IHttpContextAccessor HttpContextAccessor
@{
    var cartCount = HttpContextAccessor?.HttpContext?.Session.GetInt32("CartCount") ?? 0;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Do_An_CNTT_K3</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="~/DoAnMonCNTT/css/DoAnCNTT.css">
</head>
<body>
    <div class="header">
        <div class="headerone">
            <div class="header2">
                <div class="mucluc">
                    <div>
                        <i class="fa-solid fa-bars"></i>
                    </div>
                    <div class="header1">
                        <img src="~/DoAnMonCNTT/images/logo/logo.jpg" width="80px" height="80px" alt="logo">
                    </div>
                    <ul>
                        <div class="thanhxoa">
                            <i class="fa-solid fa-xmark"></i>
                        </div>
                        <li><a asp-controller="SanPham" asp-action="TrangChu">HOME</a></li>
                        <li><a asp-controller="SanPham" asp-action="SeaFood">SEAFOOD</a></li>
                        <li><a asp-controller="LienLac" asp-action="Contact">CONTACT</a></li>
                        <li><a asp-controller="SanPham" asp-action="INSTRUCTIONS">INSTRUCTIONS</a></li>
                        <partial name="_Admin"></partial>

                        <li class="mobile-only"><a href="">ĐĂNG NHẬP</a></li>
                        <li class="mobile-only"><a href="">ĐĂNG KÝ</a></li>
                        <div class="iconlienhe">
                            <div class="mobile-only"><a href=""><i class="fa-brands fa-facebook"></i></a></div>
                            <div class="mobile-only"><a href=""><i class="fa-brands fa-youtube"></i></a></div>
                            <div class="mobile-only"><a href=""><i class="fa-brands fa-instagram"></i></a></div>
                        </div>
                    </ul>
                </div>
                    <div class="taikhoan">
                    <partial name="_LoginPartial"></partial>
                        <div class="giohang">
                        <a asp-controller="MuaHang" asp-action="Index"><i class="fa-solid fa-cart-shopping"></i><small>(@cartCount)</small></a>
                        <div class="cart-content">
                            <div class="cart-close"><i class="fa-solid fa-delete-left"></i></div>
                            <h2>Giỏ hàng của bạn</h2>
                            <div class="cart-items" id="cart-items">
                                <div class="Thongtingiohang" data-price="100000">
                                    <div class="quantity-controls">
                                        <input type="number" value="1" class="quantity" min="1">
                                    </div>
                                    <div class="imgsp">
                                        <img src="../images/Anhvathongtindoannhat/Hitsumabushi/Hitsumabushi1.jpg" alt="">
                                    </div>
                                    <div>
                                        <p>Tên Món ăn</p>
                                    </div>
                                    <div>
                                        <p class="item-total-price">100000</p>
                                    </div>
                                    <div>
                                        <button class="delete-item">delete</button>
                                    </div>
                                </div>
                                <!-- Thêm nhiều sản phẩm để kiểm tra thanh cuộn -->
                            </div>
                            <div class="oder">
                                <div class="discount">
                                    <input class="magiamgia" type="text" id="discount-code" placeholder="Nhập mã giảm giá">
                                    <button id="apply-discount">Áp dụng</button>
                                </div>
                                <div class="oder1">
                                    <div>
                                        <h3>Tổng Tiền:</h3>
                                    </div>
                                    <div>
                                        <h3 id="total-price">100000</h3>
                                    </div>
                                </div>
                                <div id="discounted-price-container" class="oder1 hidden">
                                    <div>
                                        <h3>Tổng Tiền giảm giá:</h3>
                                    </div>
                                    <div>
                                        <h3 id="total-price" class="giagoc1">100000</h3>
                                    </div>
                                    <div>
                                        <h3 id="discounted-price">100000</h3>
                                    </div>
                                </div>
                                <input class="dathang" type="submit" value="Đặt Hàng">
                            </div>
                            <!--<div style=" margin-top: 200px;"><img style="width: 30%;" src="https://www.svgrepo.com/show/17356/empty-cart.svg" alt="">
                            <p>Giỏ hàng trống</p>
                            <a href=""></a>
                            </div>-->
                        </div>
                        </div>
                    </div>
            </div>
        </div>
    </div>

    @RenderBody()
    <div class="endhead">
        <div class="end">
            <div class="end1">
                <div class="end1-1">
                    <img src="~/DoAnMonCNTT/images/logo/logo.jpg" width="80px" height="80px" alt="logo">
                    <h2>TOHIEU <br>&ensp;FOOD</h2>
                </div>
                <p>Nhà hàng shushi online <br> hàng đầu tại Việt Nam</p>
            </div>
            <div class="end2">
                <h2>WORKING TIME</h2>
                <p>24/7 All Time</p>
            </div>
            <div class="end3">
                <h2>LOCATION</h2>
                <div class="end3-1">
                    <p>133 ToHieu</p>
                    <p>+84 444 444 444</p>
                </div>
            </div>
            <div class="end4">
                <h2>SOCIAL</h2>
                <div class="end4-1">
                    <a><i class="fa-brands fa-facebook"></i> ToHieu Food</a><br><br>
                    <a><i class="fa-brands fa-instagram"></i> ToHieu Food</a>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script src="https://www.gstatic.com/dialogflow-console/fast/messenger/bootstrap.js?v=1"></script>
    <df-messenger intent="WELCOME"
                  chat-title="Bot_BanHang"
                  agent-id="542d3c77-f589-40d9-adb2-a7ff31570f5c"
                  language-code="en"></df-messenger>
    <script src="~/DoAnMonCNTT/js/DoAnCNTT.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
